%h4.page-title Test: #{test.name}, Queston: #{question.name}
.row
  .col-sm-12
    .card-box.table-responsive
      .dropdown.pull-right
        %a.dropdown-toggle.card-drop{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
          %i.zmdi.zmdi-more-vert
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to 'New', new_users_test_question_answer_path(test, question)
      %table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap{:cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th Name
            %th Image
            %th Correct
            %th 
        %tbody
          - answers.each do |answer|
            %tr{id: "answers_#{answer.id}"}
              %td= answer.name
              %td
                - if answer.photo_url.present?
                  = image_tag answer.photo_url(:p250x250)
              %td
                - if answer.is_correct
                  %span.badge.badge-primary
                    %i.fa.fa-check
                - else
                  %span.badge.badge-danger
                    %i.fa.fa-times
              %td 
                = link_to edit_users_test_question_answer_path(test, question, answer), class: 'btn btn-sm btn-info' do
                  Edit

