%h4.page-title Test: #{test.name}
.row
  .col-sm-12
    .card-box.table-responsive
      .dropdown.pull-right
        %a.dropdown-toggle.card-drop{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
          %i.zmdi.zmdi-more-vert
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to 'New', new_users_test_question_path(test)
      %table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap{:cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th Name
            %th Image
            %th Answers
            %th 
        %tbody
          - questions.each do |question|
            %tr{id: "questions_#{question.id}"}
              %td
                = link_to users_test_path(test), class: '' do
                  = question.name
              %td
                - if question.photo_url.present?
                  = image_tag question.photo_url(:p250x250)
              %td
              %td 
                = link_to edit_users_test_question_path(test, question), class: 'btn btn-sm btn-info' do
                  Edit


