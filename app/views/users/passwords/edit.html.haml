.m-t-40.card-box
  .text-center
    -#%h4.text-uppercase.font-bold.m-b-0 Forgot Password
  .panel-body
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.input :reset_password_token, :as => :hidden
      %ul
        - resource.errors.full_messages.each do |e|
          %li=e
      -#= f.simple_fields_for :account do |account_form|
        .form-group
          .col-xs-12
            = account_form.input :domain, label: false, input_html: { class: 'form-control', placeholder: "Doamin", :autofocus => "" }
        .form-group
          .col-xs-12
            = account_form.input :name, label: false, input_html: { class: 'form-control', placeholder: "Name" }
        .form-group
          .col-xs-12
            = account_form.input :plan_id, label: false, as: :select, collection: Plan.active, include_blank: false, input_html: { class: 'form-control', placeholder: "Plan" }

      .form-group
        .col-xs-12
          %h3 Update Password
      .form-group
        .col-xs-12
          = f.input :password, label: false, input_html: { class: 'form-control', placeholder: "New Password" }
      .form-group
        .col-xs-12
          = f.input :password_confirmation, label: false, input_html: { class: 'form-control', placeholder: "Confirm Password" }
      .form-group.text-center.m-t-30
        .col-xs-12
          %button.btn.btn-custom.btn-bordred.btn-block.waves-effect.waves-light{:type => "submit"} Update Password
      -#.form-group.m-t-30.m-b-0
        .col-sm-12
          %a.text-muted{:href => "page-recoverpw.html"}
            %i.fa.fa-lock.m-r-5
            Forgot your password?




