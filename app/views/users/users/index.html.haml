%h4.page-title Users
.row
  .col-sm-12
    .card-box.table-responsive
      .dropdown.pull-right
        %a.dropdown-toggle.card-drop{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
          %i.zmdi.zmdi-more-vert
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to 'New', new_users_user_path
      %table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap{:cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th Name
            %th Email
            %th active
            %th Photo
            %th 
        %tbody
          - users.each do |user|
            %tr{id: "users_#{user.id}"}
              %td= user.name
              %td= user.email
              %td
                - if user.active
                  %span.badge.badge-primary
                    %i.fa.fa-check
                - else
                  %span.badge.badge-danger
                    %i.fa.fa-times
              %td
                - if user.photo_url.present?
                  = image_tag user.photo_url(:p50x50)
              %td 
                = link_to edit_users_user_path(user), class: 'btn btn-sm btn-info' do
                  Edit

