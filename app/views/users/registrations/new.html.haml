.m-t-40.card-box
  .text-center
    %h4.text-uppercase.font-bold.m-b-0 Create Account
  .panel-body
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %ul
        - resource.errors.full_messages.each do |e|
          %li=e
      = f.simple_fields_for :account do |account_form|
        .form-group
          .col-xs-12
            = account_form.input :domain, label: false, input_html: { class: 'form-control', placeholder: "Doamin", :autofocus => "" }
        .form-group
          .col-xs-12
            = account_form.input :name, label: false, input_html: { class: 'form-control', placeholder: "Name" }
        .form-group
          .col-xs-12
            = account_form.input :plan_id, label: false, as: :select, collection: Plan.active, include_blank: false, input_html: { class: 'form-control', placeholder: "Plan" }

      .form-group
        .col-xs-12
          %h3 User Info
      .form-group
        .col-xs-12
          = f.input :email, label: false, input_html: { class: 'form-control', placeholder: "Email", type: "email" }
      .form-group
        .col-xs-12
          = f.input :password, label: false, input_html: { class: 'form-control', placeholder: "Password", type: "password" }
      .form-group.text-center.m-t-30
        .col-xs-12
          %button.btn.btn-custom.btn-bordred.btn-block.waves-effect.waves-light{:type => "submit"} Log In
      -#.form-group.m-t-30.m-b-0
        .col-sm-12
          %a.text-muted{:href => "page-recoverpw.html"}
            %i.fa.fa-lock.m-r-5
            Forgot your password?


