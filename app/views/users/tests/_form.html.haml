.card-box
  .row
    .col-lg-12
      = simple_form_for([:users, @test], html: {class: 'form-horizontal clearfix', novalidate: true}) do |f|
        .form-group
          %label.col-md-2.control-label Name
          .col-md-10
            = f.input :name, label: false
          = f.simple_fields_for :questions do |question|
            = render 'question_fields', f: question
          .links
            = link_to_add_association 'add question', f, :questions
        .form-group
          %label 
          = f.button :submit, class: 'btn btn-primary btn-large pull-right', disable_with: 'Creating...'
