%h4.page-title Dashboard
.row
  .col-lg-3.col-md-6
    .card-box
      %h4.header-title.m-t-0.m-b-30 Total Revenue
      .widget-chart-1
        .widget-chart-box-1
          %input{"data-angleoffset" => "180", "data-bgcolor" => "#F9B9B9", "data-fgcolor" => "#f05050 ", "data-height" => "80", "data-plugin" => "knob", "data-readonly" => "true", "data-skin" => "tron", "data-thickness" => ".15", "data-width" => "80", :value => "58"}/
