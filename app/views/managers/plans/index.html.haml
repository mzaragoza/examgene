%h4.page-title Plans
.row
  .col-sm-12
    .card-box.table-responsive
      .dropdown.pull-right
        %a.dropdown-toggle.card-drop{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
          %i.zmdi.zmdi-more-vert
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to 'New', new_managers_plan_path
      %table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap{:cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th Name
            %th Slug
            %th Price
            %th Active
            %th Featured
            %th 
        %tbody
          - plans.each do |plan|
            %tr{id: "managers_#{plan.id}"}
              %td= plan.name
              %td= plan.slug
              %td= plan.price
              %td
                - if plan.active
                  %span.badge.badge-primary
                    %i.fa.fa-check
                - else
                  %span.badge.badge-danger
                    %i.fa.fa-times
              %td
                - if plan.featured
                  %span.badge.badge-primary
                    %i.fa.fa-check
                - else
                  %span.badge.badge-danger
                    %i.fa.fa-times
              %td 
                = link_to edit_managers_plan_path(plan), class: 'btn btn-sm btn-info' do
                  Edit

